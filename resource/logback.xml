<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="50 milliseconds"
	debug="true">
	<!-- &amp;&amp; 代表 && 需要转义 -->

	<property name="logdir" value="logs" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="GBK">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %F:%L - %msg%n
			</pattern>
		</encoder>
		<!-- <target>system.out</target> -->
		<target>system.err</target>
	</appender>
	<appender name="consoleLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${logdir}/%d{yyyyMMdd}/consoleLog</FileNamePattern>
			<MaxHistory>7</MaxHistory>
			<cleanHistoryOnStart>true</cleanHistoryOnStart>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出,%d:日期;%thread:线程名;%-5level：级别,从左显示5个字符宽度;%msg:日志消息;%n:换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %F:%L - %msg%n
			</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
	</appender>
	<logger name="consoleLog" level="debug">
		<appender-ref ref="consoleLog" />
	</logger>


	<appender name="startStopLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${logdir}/startStopLog/%d{yyyyMMdd}.log
			</FileNamePattern>
			<MaxHistory>2</MaxHistory>
			<cleanHistoryOnStart>true</cleanHistoryOnStart>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出,%d:日期;%thread:线程名;%-5level：级别,从左显示5个字符宽度;%msg:日志消息;%n:换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %F:%L - %msg%n
			</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
	</appender>
	<logger name="startStopLog" level="debug">
		<appender-ref ref="startStopLog" />
	</logger>


	<!-- 发送错误邮件 -->
	<appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
    <smtpHost>smtp.163.com</smtpHost>
    <to>ying_hui_chen@163.com</to>
    <from>chen_project_msg@163.com</from>
    <username>chen_project_msg@163.com</username>
    <password>msgproject147</password>
    <SSL>true</SSL>
    <subject>系统错误信息</subject>
    <asynchronousSending>false</asynchronousSending>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%date %-5level %logger{35} - %message%n</pattern>
    </layout>       
  </appender>
	<logger name = "email" level = "error">
		<appender-ref ref = "EMAIL"/>
	</logger>
	

	<!-- 日志输出级别 -->
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="consoleLog" />
	</root>
</configuration>